<launch>

  <node pkg="tf"
        type="static_transform_publisher"
        name="base_link_to_laser_broadcaster"
        args="0.1 0 0.1 0 0 0 base_link laser_link 100"
        output="screen"/>

  <node pkg="urg_node"
        type="urg_node"
        name="laser_scanner"
        output="screen">
    <param name="ip_address" value="192.168.0.10"/>
    <remap from="scan" to="scan_raw"/>
  </node>

  <node pkg="laser_filters"
        type="scan_to_scan_filter_chain"
        name="laser_filter"
        output="screen">
    <rosparam command="load" file="$(find tuw_iwos_launches)/config/laser_box_filter.yaml"/>
    <remap from="scan_filtered" to="scan"/>
  </node>

</launch>